{
  "version": "2.0.0",
  "isBackground": false,
  "presentation": {
      "reveal": "always",
      "panel": "new"
  },
  "env": {
    "DEBUG": "*",
    "NODE_DEBUG": "1",
    "NODE_ENV": "development"
  },
  "tasks": [
    {
      "label": "build",
      "group": "build",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "transpile:typescript:es8-es2017+afterdist"
      ],
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ],
      "presentation": {
          "reveal": "always",
          "panel": "shared"
      }
    },
    {
      "label": "lintbuild",
      "group": "build",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "build:es8-es2017"
      ],
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ],
      "presentation": {
          "reveal": "always",
          "panel": "shared"
      }
    },
    {
      "label": "typescript",
      "group": "build",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "transpile:typescript:single",
        "es8-es2017",
        "${file}"
      ],
      "problemMatcher": [
        "$tsc",
        "$eslint-stylish"
      ],
      "presentation": {
          "reveal": "always",
          "panel": "shared"
      }
    }
  ]
}
